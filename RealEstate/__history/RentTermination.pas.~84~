procedure TRentTerminationF.UnitCBSelect(Sender: TObject);
begin
  inherited;
    ContractDetailsQ.Open;
    ContractDetailsQ.Locate('ContractID',
UnitCB.ListSource.DataSet.FieldByName('ContractID').AsString,[]);

  ContractCB.Text :='';
    pnlRestPayments.Visible := True;
end;

end.
