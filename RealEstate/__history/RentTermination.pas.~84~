//
//          TempQry1.Close;
//     TempQry1.SQL.Clear;
//
//  TempQry1.SQL.Text := 'SELECT * FROM payments '
//+' WHERE   ContractNo = '''+ dbeContract.Text +''' '
//+' And PaymentSN =   '''+ PmtSN +'''  ';
//
//       TempQry1.Open;
