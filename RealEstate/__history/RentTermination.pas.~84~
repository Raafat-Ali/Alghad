+ ' UPDATE contracts  Set Termination = True , TerminDate = '''+ DateToStr(dtpTermDate.DateTime) +'''  '
+ ' , Active = False  Where  ContractID	 = '''+ dbeContract.Text +'''  ';
tSQL.Execute;


tSQL.Free;

   //  print   ‰„Ê–Ã  ”·Ì„ «·„” √Ã— ··ÊÕœ… «·≈ÌÃ«—Ì… //
      PrintContractDetailsQ.Filtered := false;
